<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.online.ecommercePlatform.mapper.UserMapper">
    <!-- 用户实体映射 -->
    <resultMap id="UserMap" type="com.online.ecommercePlatform.pojo.User">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="gender" property="gender"/>
        <result column="age" property="age"/>
        <result column="is_vip" property="isVip"/>
        <result column="role" property="role"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <!-- 通用字段列表 -->
    <sql id="Base_Column_List">
        user_id, username, password, email, phone, gender, age, is_vip, role, create_time, update_time
    </sql>
    
    <!-- 根据ID查询用户 -->
    <select id="findById" resultMap="UserMap">
        SELECT 
            <include refid="Base_Column_List"/>
        FROM `User`
        WHERE user_id = #{id}
    </select>
    
    <!-- 根据用户名查询用户 -->
    <select id="findByUsername" resultMap="UserMap">
        SELECT 
            <include refid="Base_Column_List"/>
        FROM `User`
        WHERE username = #{username}
    </select>
    
    <!-- 新增用户 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO `User` (
            username, password, email, phone, gender, age, is_vip, role
        ) VALUES (
            #{username}, #{password}, #{email}, #{phone}, #{gender}, #{age}, #{isVip}, #{role}
        )
    </insert>
    
    <!-- 更新用户 -->
    <update id="update">
        UPDATE `User`
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="age != null">age = #{age},</if>
            <if test="isVip != null">is_vip = #{isVip},</if>
            <if test="role != null">role = #{role}</if>
        </set>
        WHERE user_id = #{userId}
    </update>
    
    <!-- 根据ID删除用户 -->
    <delete id="deleteById">
        DELETE FROM `User` WHERE user_id = #{id}
    </delete>
    
    <!-- 批量删除用户 -->
    <delete id="deleteBatch">
        DELETE FROM `User` WHERE user_id IN 
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <!-- 查询所有用户 -->
    <select id="findAll" resultMap="UserMap">
        SELECT 
            <include refid="Base_Column_List"/>
        FROM `User`
        ORDER BY create_time DESC
    </select>
    
    <!-- 分页查询用户 -->
    <select id="findByPage" resultMap="UserMap">
        SELECT 
            <include refid="Base_Column_List"/>
        FROM `User`
        ORDER BY create_time DESC
    </select>
    
    <!-- 带条件的分页查询用户 -->
    <select id="findByPageWithCondition" resultMap="UserMap" parameterType="com.online.ecommercePlatform.pojo.User">
        SELECT 
            <include refid="Base_Column_List"/>
        FROM `User`
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="email != null and email != ''">
                AND email LIKE CONCAT('%', #{email}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
            <if test="gender != null and gender != ''">
                AND gender = #{gender}
            </if>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
            <if test="isVip != null">
                AND is_vip = #{isVip}
            </if>
            <if test="age != null">
                AND age = #{age}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <!-- 统计用户总数 -->
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM `User`
    </select>
</mapper> 